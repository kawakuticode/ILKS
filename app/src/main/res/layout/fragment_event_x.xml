<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name_party"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME PARTY"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout

                android:id="@+id/l_location_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_party"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/icon_location"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription=""
                    android:src="@mipmap/ic_location"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_place_party"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Club matrix"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_date_party"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="end"
                    android:text="Friday, 21 Nov 2017"
                    android:textSize="16sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l_location_info">

                <View
                    android:id="@+id/m_divider"
                    android:layout_width="match_parent"

                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#bab6b6" />

                <TextView
                    android:id="@+id/tv_txt_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Price : "
                    android:textColor="#15b9d6"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_price_party"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="bottom"
                    android:gravity="end"
                    android:text="$10.00"
                    android:textColor="#15b9d6"
                    android:textSize="16sp" />

            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>