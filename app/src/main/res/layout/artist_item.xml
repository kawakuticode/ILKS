<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:elevation="2dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/img_artist"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/logo" />

                <TextView
                    android:id="@+id/tv_artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:text="Artist Name"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/img_artist"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="18dp" />

            <TextView
                android:id="@+id/tv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_artist_name"
                android:layout_below="@+id/tv_artist_name"
                android:text="Classes : " />

            <TextView
                android:id="@+id/tv_type_of_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_artist_name"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/tv_class"
                android:textStyle="italic"
                android:text="Kizomba , semba , kuduro" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>